#include<iostream>
using namespace std;
int add(int x,int y)
{
	return x+y;
}
int add(int x,int y,int z)
{
	return x+y+z;
}
float add(float x,float y)
{
	return x+y;
}
int main()
{
	int a=5,b=6,c=2;
	float x=2.5,y=3.0;
	cout<<"the addition of 2 numbers"<<add(a,b)<<endl;
	cout<<"the addition 3 numbers"<<add(a,b,c)<<endl;
	cout<<"theaddition of 2 numbers in float"<<add(x,y)<<endl;
	
}
